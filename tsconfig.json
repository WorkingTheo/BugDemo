{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowJs": false,
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./typings",
      "./node_modules/**/*.d.ts",
      "./node_modules/@types"
    ]
  },
  "include": [
    "app"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}